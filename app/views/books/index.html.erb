    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
   <% end %>
  </ul>
     <%= form_with model: @book do |f| %>
   <h3>Title</h3>
    <div class="create">
      <%= f.text_field :title %>
    </div>
   <h3>Body</h3>
    <div class="create">
      <%= f.text_area :body %>
    </div>
    <div class="create">
      <%= f.submit 'Create Book' %>
    </div>

