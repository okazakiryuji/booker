<head>
  <styles type="books.scss">
  </styles>
</head>
<body>
 <h1>Books</h1>
 <table>
   <thead>
     <tr>
       <th>Title</th>
       <th>Body</th>
       <th colspan="3"></th>
     </tr>
     <tbody>
      <span><% @books.each do |book| %></span>
       <tr>
         <td> <span><%= book.title %></span></td>
         <td> <span><%= book.body %></span></td>
         <td><a class="show_101340" href="/books/101340">Show</a></td>
         <td><a class="edit_101340" href="/books/101340/edit">Edit</a></td>
         <td><a data-confirm="Are you sure?" class="destroy_101340" rel="nofollow" data-method="delete" href="/books/101340">Destroy</a></td>
      <% end %>
   </thead>
 </table>


   <h1>New book</h1>
     <%= form_with model: @book do |f| %>
   <h3>Title</h3>
    <div class="create">
      <%= f.text_field :title %>
    </div>
   <h3>Body</h3>
    <div class="create">
      <%= f.text_area :body %>
    </div>
    <div class="create">
      <%= f.submit 'Create Book' %>
    </div>

</body>

<% end %>