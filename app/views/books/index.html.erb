<body>
 <h1>Books</h1>
 <table>
   <thead>
     <tr>
       <th>Title</th>
       <th>Body</th>
       <th colspan="3"></th>
     </tr>
     <tbody>

      <span><% @books.each do |book| %></span>
       <tr>

         <td> <span><%= book.title %></span></td>
         <td> <span><%= book.body %></span></td>
         <td><a> <%= link_to "show", book_path(book.id)%></a></td>
         <td><a> <%= link_to "Edit", edit_book_path(book.id) %></a></td>
         <td><a><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></a></td>
      <% end %>
   </thead>
 </table>


   <h1>New book</h1>
